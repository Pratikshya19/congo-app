<!DOCTYPE html>
<html>
  <head>
  
    <title>CONGO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  








  <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
  <a class="navbar-brand" href="/">CONGO</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !session[:user_id] %>
      <li class="nav-item active">
        <a class="nav-link" href="/login">Login<span class="sr-only">(current)</span></a>
      </li>
      <% else %>
      <li class="nav-item active">
        <a class="nav-link" href="/users/<%="#{session[:user_id]}"%>">Visit Profile<span class="sr-only">(current)</span></a>
      <% end %>
      <% if !session[:user_id] %>
      <li class="nav-item active">
        <a class="nav-link" href="/users/new">Create New Account<span class="sr-only">(current)</span></a>
      </li>
      <% end %>
      <% if session[:user_id] %>
        <li class="nav-item">
        <div class="topnav-right">
        <a class="nav-link" href="/logout">Logout</a>
        </div>
        </li>
      <% end %>
      <% if session[:cart] %>
        <li class="nav-item">
        <a class="nav-link" href="/cart">Cart <%="#{session[:cart].count}" %></a>
        </li>
      <% end %>

    </ul>
  </div>
</nav>
<style>
  body {
    
 background-image: url("https://mdbootstrap.com/img/Photos/Horizontal/Nature/full page/img(20).jpg");
 background-color: #cccccc;
 background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center; 
}
    background-color: #93B874;
  }
  </style>

  <body>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
