<!DOCTYPE html>
<html>
  <head>
    <title>CongoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Congo</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !session[:user_id] %>
      <li class="nav-item active">
        <a class="nav-link" href="/login">Login<span class="sr-only">(current)</span></a>
      </li>
      <% else %>
      <li class="nav-item active">
        <a class="nav-link" href="/users/<%="#{session[:user_id]}"%>">Visit Profile<span class="sr-only">(current)</span></a>
      <% end %>
      <% if !session[:user_id] %>
      <li class="nav-item active">
        <a class="nav-link" href="/users/new">Create New Account<span class="sr-only">(current)</span></a>
      </li>
      <% end %>
      <% if session[:user_id] %>
        <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
        </li>
      <% end %>
      <% if session[:cart] %>
        <li class="nav-item">
        <a class="nav-link" href="/cart">Cart <%="#{session[:cart].count}" %></a>
        </li>
      <% end %>
    </ul>
  </div>
</nav>


  <body>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
